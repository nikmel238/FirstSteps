body {
	background: #efe5d0 url(../images/background.gif) top left;
	font-family: Verdana, Helvetica, Arial, sans-serif;
	margin: 20px;
}

table {
	border: #7e7e7e dotted thin;
	padding: 10px;
}

th {
	text-align: right;
	vertical-align: top;
	padding: 2px 10px 0px 0px;
}

td {
	vertical-align: top;
	padding-bottom: 15px;
}

table table {
	border: none;
	padding: 60px;
}
