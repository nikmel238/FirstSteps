body {
	background-color: #b5a789;
	margin: 0px;
	font: small Georgia, "Times New Roman", Times, serif;
}

#header {
	background-color: #675c47;
	margin: 10px;
	height: 108px;
}

#header img#headerSlogan {
	   float: right;
}

#award {
	position: absolute;
	top: 30px;
	left: 45%;
	z-index: 99;
}

#main {
	background: #efe5d0 url(../images/background.gif) top left;
	font-size: 105%;
	padding: 15px;
	margin: 0px 330px 10px 250px;
}

#sidebar {
	background: #efe5d0 url(../images/background.gif) bottom right;
	font-size: 105%;
	padding: 15px;
	margin: 0px 10px 10px 10px;
	position: absolute;
	top: 128px;
	right:0px;
	width: 280px;
}

#napitki {
	background :#efe5d0;
	font-size: 105%;
	line-height: 1;
	padding: 15px;
	margin: 0px 10px 10px 10px;
	float: left;
	width: 200px;
}

#napitiki h1 {
	text-align: center;
}

#footer {
	background-color: #675c47;
	padding: 15px;
	margin: 10px 10px 10px 10px;
	color: #efe5d0;
	text-align: center;
	font-size: 90%;
	clear: left;
}	

h1 {
	font-size: 120%;
	color: #954b4b;
}

.slogan {color: #954b4b; }

.beanheading {
	text-align: center;
	line-height: 1.8en;
}

a:link {
	color: #b76666;
	text-decoration: none;
	border-bottom: #b76666 dotted thin;
}

a:visited {
	color: #675c47;
	text-decoration: none;
	border-bottom: #675c47 dotted thin;
}

#coupon {
	position: fixed;
	top: 300px;
	left: -90px;
}

#coupon img {
	border: none;
}

#coupon a:link {
	border: none;
}

#coupon a:visited {
	border: none;
}
